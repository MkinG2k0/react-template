{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "lib": [
      "DOM",
      "ESNext"
    ],
    "paths": {
      "@ReduxHelper": [
        "Redux/Helper/Helper"
      ]
    }
  },
  "include": [
    "src/**/*",
    "templates/**/*"
  ],
  "exclude": [
    "node_modules",
    "android",
    "build"
  ]
}
